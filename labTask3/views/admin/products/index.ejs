<!-- views/admin/products/index.ejs -->

<h3><%- pageTitle %></h3>

<a href="/admin/products/create" class="btn btn-info mb-3">Add Product</a>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th>Image</th> <!-- Add Image Column -->
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
      <tr>
        <td><%= product._id %></td>
        <td><%= product.name %></td>
        <td><%= product.description || 'N/A' %></td>
        <td>PKR <%= product.price %></td>
        <td><%= product.category ? product.category.name : 'No Category' %></td>
        <td>
          <% if (product.image) { %>
            <img src="<%= product.image %>" alt="<%= product.name %>" width="100" height="100">
          <% } else { %>
            <span>No Image</span>
          <% } %>
        </td> <!-- Display Image -->
        <td>
          <a href="/admin/products/edit/<%= product._id %>" class="btn btn-danger btn-sm">Edit</a>
          <form action="/admin/products/delete/<%= product._id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Are you sure you want to delete this product?');">
              Delete
            </button>
          </form>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
